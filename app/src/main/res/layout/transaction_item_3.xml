<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:id="@+id/trnsLayout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/7/18"
                android:textSize="13sp"
                android:textColor="@color/colorAccent"
                android:id="@+id/tv_date"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_points"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="1000 pts"
                android:textSize="18sp"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_points"
                android:textColor="@color/colorAccent"
                android:id="@+id/tv_pointsdesc"
                android:textSize="16sp"
                android:layout_marginBottom="2dp"
                android:text="Happy has purchased product worth of Rs 10000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pointsdesc"
                android:textColor="@color/colorAccent"
                android:layout_alignParentRight="true"
                android:text="20000 pts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:id="@+id/tv_closingbalance"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>