<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/headerlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Opening Balance"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Closing Balance"
                    android:textColor="@color/primaryTextColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Approved Amount"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headerlayout"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:id="@+id/balancelayout"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 Rs"
                    android:id="@+id/tv_openingbalance"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 Rs"
                    android:id="@+id/tv_closingbalance"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 Rs"
                    android:id="@+id/tv_approvedamount"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/primaryTextColor" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_buyername"
                android:layout_below="@+id/balancelayout"
                android:layout_marginTop="5dp"
                android:text="Prashanth"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textColor="@color/primaryTextColor"/>

            <TextView
                android:id="@+id/tv_createddate"
                android:layout_marginRight="5dp"
                android:text="12 DEC 2017"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/balancelayout"
                android:textColor="@color/primaryTextColor"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>