<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:id="@+id/cardView"
        android:padding="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="6dp">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:id="@+id/iv_productImage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prashanth"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/primaryTextColor"
                android:id="@+id/tv_buyername"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_buyername"
                android:text="Description : "
                android:textColor="@color/primaryTextColor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_amount"
                android:textSize="18sp"
                android:layout_below="@+id/tv_description"
                android:text="110 Rs"
                android:layout_marginTop="5dp"
                android:textColor="@color/primaryTextColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_productImage"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/linearLayout">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/btn_signin_text"
                    android:text="Accept"
                    android:textAlignment="center"
                    android:background="@drawable/btn_signin_background"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:id="@+id/btn_accept"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_signin_background"
                    android:text="Decline"
                    android:layout_weight="1"
                    android:id="@+id/btn_decline"
                    android:textColor="@drawable/btn_signin_text" />


            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>